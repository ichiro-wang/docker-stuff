services:
  backend:
    image: backend
    ports:
      - 8080:8080
    environment:
      - POSTGRES_PASSWORD=password
      - POSTGRES_DATABASE=db
    depends_on: 
      - db
  frontend:
    image: frontend
    ports:
      - 5000:5000
  db:
    image: postgres
    restart: unless-stopped
    environment:
      - POSTGRES_PASSWORD=password
    container_name: db_backend
